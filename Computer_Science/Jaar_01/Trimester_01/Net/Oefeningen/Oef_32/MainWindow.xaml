        <Button x:Name="BtnSorteren" Content="Sorteren" HorizontalAlignment="Left" Margin="308,278,0,0" VerticalAlignment="Top" Height="41" Width="94" Click="BtnSorteren_Click"/>
        <ListBox x:Name="LstMultiple" Margin="498,89,160,175" SelectedIndex="0" AllowDrop="True" SelectionMode="Multiple" SelectionChanged="LstMultiple_SelectionChanged">
            <ListBoxItem Content="Jacy"/>
            <ListBoxItem Content="Jaylene" />
            <ListBoxItem Content="Laura"/>
            <ListBoxItem Content="Fobi"/>
        </ListBox>
        <Label Content="SelectionMode Simple" HorizontalAlignment="Left" Margin="60,55,0,0" VerticalAlignment="Top"/>
        <Label Content="SelectionMode Multiple" HorizontalAlignment="Left" Margin="497,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtGeselecteerd" HorizontalAlignment="Left" Margin="502,282,0,0" TextWrapping="Wrap" Text="hoeveel items er geselect zijn" VerticalAlignment="Top" Width="171" Height="39"/>
        <Label x:Name="LbZoeken" Content="zoek een item" HorizontalAlignment="Left" Margin="232,53,0,0" VerticalAlignment="Top"/>
        <Menu x:Name="Menu" Margin="0,0,0,413"/>
