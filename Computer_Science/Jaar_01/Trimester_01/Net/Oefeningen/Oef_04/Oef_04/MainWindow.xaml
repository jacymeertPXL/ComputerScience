        <Button x:Name="BtnWissen" Content="Wissen" HorizontalAlignment="Left" Margin="601,177,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.48,0.453" Click="Button_Click"/>
        <Button x:Name="BtnBereken" Content="Berekenen" HorizontalAlignment="Left" Margin="600,135,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.48,0.453"/>
        <Button x:Name="BtnSluiten" Content="Sluiten" HorizontalAlignment="Left" Margin="603,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.48,0.453"/>

    </Grid>
</Window>
