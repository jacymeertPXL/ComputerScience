<Window x:Class="Oef_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oef_04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Ondernemingsnummer" HorizontalAlignment="Left" Margin="243,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.859,0.423"/>
        <Label Content="Prijs" HorizontalAlignment="Left" Margin="246,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.859,0.423"/>
        <Label Content="Aantal" HorizontalAlignment="Left" Margin="246,169,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.859,0.423"/>
        <Label Content="Te betalen" HorizontalAlignment="Left" Margin="245,200,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.859,0.423"/>
        <TextBox x:Name="TxtOnderneminsnummer" HorizontalAlignment="Left" Margin="406,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtPrijs" HorizontalAlignment="Left" Margin="408,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtAantal" HorizontalAlignment="Left" Margin="408,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
