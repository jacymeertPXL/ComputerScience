            </StackPanel>
            <StackPanel Orientation="Horizontal" Background="White" Margin="10">
                <!-- Afbeelding -->
                    <Image Source="img/Coockie.png" Width="50" Height="50" Margin="0,0,10,0" />

                <!-- Tekst en beschrijving -->
                <StackPanel>
                        <TextBlock Text="Achievement vergrendeld" FontWeight="Bold" FontSize="16" />
                    <TextBlock Text="Klik 100 000 Keer op een cookie; Al heel erg veel geclicked he :3" TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Background="White" Margin="10">
                <!-- Afbeelding -->
                    <Image Source="img/Grandma.png" Width="50" Height="50" Margin="0,0,10,0" />

                <!-- Tekst en beschrijving -->
                <StackPanel>
                        <TextBlock Text="Achievement Overgrendeld" FontWeight="Bold" FontSize="16" />
